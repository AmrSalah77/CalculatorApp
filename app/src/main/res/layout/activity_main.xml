<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:backgroundTint="@color/black"
        android:gravity="center|right"
        android:maxLength="10"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="65"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/undoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/undo"
                android:textColor="@color/teal_200"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/MCbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/memoryClear"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />

            <Button
                android:id="@+id/mPlusButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/memoryAdd"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />

            <Button
                android:id="@+id/mMinusButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/memorySubtract"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />

            <Button
                android:id="@+id/MRbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/memoryRecall"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/clear"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/negative"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />

            <Button
                android:id="@+id/backspaceButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/backspace"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />

            <Button
                android:id="@+id/divisionButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/division"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sevenButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/seven"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/eightButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/eight"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/nineButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/nine"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/multiplyButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/multiply"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fourButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/four"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/fiveButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/five"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/sixButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/six"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/subtractButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/minus"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/oneButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/one"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/twoButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/two"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/threeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/three"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/plus"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/doubleZerosButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/twoZeros"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/zeroButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/Zero"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/decimalButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/decimal"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/equalButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_white"
                android:text="@string/equal"
                android:textColor="@color/teal_200"
                android:textSize="26sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>